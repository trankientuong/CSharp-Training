@page "/"

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<ChildComponent CurrentCount="currentCount"></ChildComponent>
<br />
Current Count : @currentCount
<br />
<button @onclick="ClickMe">Click Me</button>

@code {

    private int currentCount = 0;

    public override Task SetParametersAsync(ParameterView parameters)
    {
        Console.WriteLine($"Parent - SetParametersAsync at {DateTime.Now.ToString("hh:MM:ss.fff")}");
        return base.SetParametersAsync(parameters);
    }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        Console.WriteLine($"Parent - OnInitialized at {DateTime.Now.ToString("hh:MM:ss.fff")}");
    }

    protected override void OnParametersSet()
    {
        base.OnParametersSet();
        Console.WriteLine($"Parent - OnParametersSet at {DateTime.Now.ToString("hh:MM:ss.fff")}");
    }

    ////////////////////////////////////////////////////////

    protected override bool ShouldRender()
    {
        Console.WriteLine("Parent ShouldRender triggered");
        return base.ShouldRender();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        base.OnAfterRender(firstRender);
        Console.WriteLine($"Parent firstRender is {firstRender}");
        Console.WriteLine($"Parent - OnAfterRender at {DateTime.Now.ToString("hh:MM:ss.fff")}");
    }

    private void ClickMe()
    {
        currentCount++;
    }
}

